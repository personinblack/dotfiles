{
    "codeLens.enable": true,

    "solargraph.completion": true,
    "solargraph.definitions": true,
    "solargraph.diagnostics": true,
    "solargraph.references": true,
    "solargraph.hover": true,

    "rust-analyzer.updates.channel": "nightly",
    "rust-analyzer.completion.addCallParenthesis": true,

    "tsserver.formatOnType": false,

    "javascript.suggestionActions.enabled": false,

    "java.configuration.maven.userSettings": "~/.config/maven/settings.xml",
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-1.8",
            "path": "/usr/lib/jvm/java-8-openjdk"
        }
    ],

    "languageserver": {
      "haskell": {
        "command": "haskell-language-server-wrapper",
        "args": ["--lsp"],
        "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
        "filetypes": ["haskell", "lhaskell"]
      }
    },
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/15.0.3/clangd_15.0.3/bin/clangd"
}
